.side-header
  .side-header__name
    = current_user.name
  .side-header__menu
    .side-header__menu__new-group
      =link_to new_group_path(current_user) do
        =fa_icon 'edit'
    .side-header__menu__edit-acount
      =link_to edit_user_path(current_user) do
        =fa_icon 'cog'
.group
  - current_user.groups.each do |group|
    = link_to group_messages_path(group) do
      .group__box
        .group__name
          = group.name
        .group__message
          = group.show_last_message